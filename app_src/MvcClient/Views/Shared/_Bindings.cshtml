@using MvcLib.MainContent

@model Dictionary<categoryType, List<ItemCategory>>

<div class="ds-data-list" data-spm="datalist" id="databinding">


    @if (Model != null && Model.Count > 0)
    {
        <div class="content-list" id="bd">
            <section>
                <div class="hd">类型</div>
                <div class="bd lx" name="lx">
                    <ul>
                        @if (Model.TryGetValue(categoryType.lei_xing, out List<ItemCategory> itemCategories_lx))
                        {
                            foreach (var s in itemCategories_lx)
                            {
                                <li><a href="javascript:;" rel="lx_@s.id">@s.title</a></li>
                            } 
                        }
                        else
                        {
                            <li class="emp"><a href="javascript:;" rel="">[空数据]</a></li>
                        }
                    </ul>
                </div>
                <div class="clearfix"></div>
            </section>

            <section>
                <div class="hd">模块</div>
                <div class="bd mk" name="mk">
                    <ul>
                        @if (Model.TryGetValue(categoryType.mo_kuai, out List<ItemCategory> itemCategories_mk))
                        {
                            if (itemCategories_mk.Count > 0)
                            {
                                foreach (var s in itemCategories_mk)
                                {
                                    <li><a href="javascript:;" rel="mk_@s.id">@s.title </a></li>
                                }
                            }
                        

                        }

                    </ul>
                </div>
                <div class="clearfix"></div>
            </section>

            <section>
                <div class="hd">学科</div>
                <div class="bd xk" name="xk">
                    <ul>
                        @if (Model.TryGetValue(categoryType.xue_ke, out List<ItemCategory> itemCategories))
                        {
                            if (itemCategories.Count > 0)
                            {
                                foreach (var s in itemCategories)
                                {
                                    <li><a href="javascript:;" rel="xk_@s.id">@s.title </a></li>
                                }
                            }
                      
                        }

                    </ul>

                </div>
                <div class="clearfix"></div>
            </section>

            <section>
                <div class="hd">版本</div>
                <div class="bd bb" name="bb">
                    <ul>
                        @if (Model.TryGetValue(categoryType.ban_ben, out List<ItemCategory> itemCategories_bb))
                        {
                            if (itemCategories_bb.Count > 0)
                            {
                                foreach (var s in itemCategories_bb)
                                {
                                    <li><a href="javascript:;" rel="bb_@s.id">@s.title </a></li>
                                }
                            }           
                      
                        }



                    </ul>
                </div>
                <div class="clearfix"></div>
            </section>

        </div>
    }
    else
    {
        <h3 class="text-muted text-center">没有设置任何关联</h3>
    }


</div>